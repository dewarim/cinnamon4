<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>


    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.eclipse" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.dewarim.cinnamon.model.UserAccount" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.filter.ChangeTriggerFilter" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.dewarim.cinnamon.filter.PostCommitChangeTriggerHandler" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.dewarim.cinnamon.model.Group" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.GroupUser" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.AclGroup" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.AclGroupPermission" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.Acl" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.ObjectType" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.Language" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.Deletion" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.model.SessionMapper" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.dewarim.cinnamon.filter.AuthenticationFilter" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="org.apache.hc.client5.http" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="io.netty.util" level="warn"><AppenderRef ref="Console"/></Logger>
        <Logger name="com.networknt" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.networknt.schema.TypeValidator" level="warn">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>