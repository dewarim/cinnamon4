<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dewarim.cinnamon.CmnGroupMapper">
    
    <resultMap id="cmnGroupMap" type="com.dewarim.cinnamon.model.CmnGroup">
        <id property="id" column="id"/>
        <result property="groupOfOne" column="group_of_one"/>
        <result property="name" column="name"/>
        <result property="objVersion" column="obj_version"/>
        <result property="parentId" column="parent_id"/>
    </resultMap>

    <select id="getCmnGroupById" parameterType="long" resultMap="cmnGroupMap">
        SELECT *
        FROM groups
        WHERE id = #{id}
    </select>
    <select id="getCmnGroupByName" parameterType="string" resultMap="cmnGroupMap">
        SELECT *
        FROM groups
        WHERE name = #{name}
    </select>
    
    <select id="getCmnGroupsOfUserById" parameterType="long" resultMap="cmnGroupMap">
        SELECT * 
        FROM groups JOIN group_users gu on groups.id = gu.group_id WHERE gu.user_id= #{id}
    </select>
    
</mapper>