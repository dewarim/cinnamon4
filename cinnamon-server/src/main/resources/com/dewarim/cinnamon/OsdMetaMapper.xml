<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dewarim.cinnamon.OsdMetaMapper">

    <resultMap id="osdMetaMap" type="com.dewarim.cinnamon.model.Meta">
        <id property="id" column="id"/>
        <result property="id" column="osd_id"/>
        <result property="typeId" column="type_id"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="listByOsd" parameterType="long" resultMap="osdMetaMap">
        SELECT *
        FROM osd_meta
        WHERE osd_id = #{id}
    </select>

    <select id="getMetasetsByNameAndOsd" parameterType="map" resultMap="osdMetaMap">
        SELECT *
        FROM osd_meta
        WHERE osd_id = #{id}
        AND type_id IN (select id from metaset_types where name in
        <foreach item="item" index="index" collection="typeNames"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
        )
    </select>

    <insert id="insertMeta" parameterType="com.dewarim.cinnamon.model.Meta">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            select nextval('seq_osd_meta_id')
        </selectKey>
        INSERT INTO osd_meta (id, osd_id, type_id, content) VALUES
        (#{id}, #{objectId}, #{typeId}, #{content})
    </insert>

</mapper>