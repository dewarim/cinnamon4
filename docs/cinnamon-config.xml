<CinnamonConfig>
  <serverConfig>
    <systemRoot>/opt/cinnamon/data/config</systemRoot>
    <dataRoot>/opt/cinnamon/data/content</dataRoot>
    <enableHttps>false</enableHttps>
    <maxThreads>200</maxThreads>
    <httpConnectorConfig>
      <port>8080</port>
      <acceptors>1</acceptors>
      <selectors>1</selectors>
      <acceptQueueSize>128</acceptQueueSize>
    </httpConnectorConfig>
    <httpsConnectorConfig>
      <port>8443</port>
      <acceptors>1</acceptors>
      <selectors>1</selectors>
      <acceptQueueSize>128</acceptQueueSize>
      <keyStorePath>my.keystore</keyStorePath>
      <keyStorePassword>secret</keyStorePassword>
    </httpsConnectorConfig>
    <verifyExistence>true</verifyExistence>
    <ignoreNopUpdates>false</ignoreNopUpdates>
    <log4jConfigPath>/opt/cinnamon/log4j.xml</log4jConfigPath>
  </serverConfig>
  <systemAdministratorEmail/>
  <mailConfig>
    <smtpHost/>
    <smtpUser/>
    <smtpPassword/>
  </mailConfig>
  <securityConfig>
    <passwordRounds>10</passwordRounds>
    <minimumPasswordLength>8</minimumPasswordLength>
    <transferAssetsAllowed>true</transferAssetsAllowed>
    <deleteUserAllowed>true</deleteUserAllowed>
    <sessionLengthInMillis>864000000</sessionLengthInMillis>
    <ldapConfig>
      <ldapConnectorEnabled>false</ldapConnectorEnabled>
      <host>localhost</host>
      <port>10389</port>
      <bindDnFormatString>cn=%s,cn=Users,dc=localhost</bindDnFormatString>
      <searchBaseDnFormatString>cn=retrieval-users,cn=Users,dc=localhost</searchBaseDnFormatString>
      <searchFilter>(&amp;(objectclass=*))</searchFilter>
      <searchAttributeForGroup>member</searchAttributeForGroup>
      <searchAttributeForDn>distinguishedName</searchAttributeForDn>
      <defaultLanguageCode>und</defaultLanguageCode>
      <staticBindPassword/>
      <groupMappings/>
    </ldapConfig>
  </securityConfig>
  <databaseConfig>
    <driver>org.postgresql.Driver</driver>
    <host>127.0.0.1</host>
    <port>5432</port>
    <database>cinnamon</database>
    <user>cinnamon</user>
    <password>CINNAMON_DB_USER_PWD</password>
  </databaseConfig>
  <luceneConfig>
   <indexPath>/opt/cinnamon/data/index</indexPath>
   <millisToWaitBetweenRuns>1000</millisToWaitBetweenRuns>
   <maxIndexAttempts>1</maxIndexAttempts>
   <maxBatchSize>64</maxBatchSize>
   <verifySearchResults>true</verifySearchResults>
 </luceneConfig>
  <cinnamonTikaConfig>
    <baseUrl>http://127.0.0.1:9998</baseUrl>
    <useTika>true</useTika>
  </cinnamonTikaConfig>
  <loginProviders/>
  <changeTriggerConfig>
    <socketTimeoutSeconds>60</socketTimeoutSeconds>
    <connectionTimeoutSeconds>60</connectionTimeoutSeconds>
    <timeToLiveSeconds>600</timeToLiveSeconds>
    <tlsVersions>
      <tlsVersion>V_1_3</tlsVersion>
    </tlsVersions>
  </changeTriggerConfig>
</CinnamonConfig>